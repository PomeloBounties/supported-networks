{
    "description": "Firehose Block Type",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9.]+$",
            "$comment": "Block type, i.e. sf.ethereum.type.v2.Block"
        },
        "bytesEncoding": {
            "type": "string",
            "enum": ["hex", "0xhex", "base58"],
            "$comment": "Bytes encoding, i.e. hex, 0xhex, base58"
        },
        "bufBuildUrl": {
            "type": "string",
            "format": "uri",
            "$comment": "Protobuf definitions on buf.build, i.e. https://buf.build/streamingfast/firehose-ethereum"
        }
    },
    "required": ["type", "bytesEncoding", "bufBuildUrl"],
    "additionalProperties": false
}